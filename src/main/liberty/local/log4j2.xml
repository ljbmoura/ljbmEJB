<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" name="IPD" >

	<Filter type="ThresholdFilter" level="trace" />

	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %X{session} %-5p [%c{1}] %m%n" charset="UTF-8"/>
		</Console>
		
		<RollingRandomAccessFile name="LogGeral" fileName="/opt/app/ipd/log/ipd.log" filePattern="/opt/app/ipd/log/ipd-%i-%d{dd-MM-yyyy}.log.zip">
			<Policies>
				<SizeBasedTriggeringPolicy size="25 MB" />
			</Policies>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %X{session} %-5p [%c{1}] %m%n" charset="UTF-8"/>
			<DefaultRolloverStrategy min="1" max="10"/>
		</RollingRandomAccessFile>
		
		<RollingRandomAccessFile name="LogCert" fileName="/opt/app/ipd/log/ipd_cert.log" filePattern="/opt/app/ipd/log/ipd_cert-%i-%d{dd-MM-yyyy}.log.zip">
			<Policies>
				<SizeBasedTriggeringPolicy size="25 MB" />
			</Policies>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %X{session} %-5p [%c{1}] %m%n" charset="UTF-8"/>
			<DefaultRolloverStrategy min="1" max="10"/>
		</RollingRandomAccessFile>
		
